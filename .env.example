# .env.example
# Copia este archivo como .env y ajusta los valores según tu entorno

# =============================================================================
# APLICACIÓN
# =============================================================================
NODE_ENV=development
NODE_DEBUG=app
PORT=3000

# =============================================================================
# BASE DE DATOS
# =============================================================================
# Estas variables son usadas tanto por la aplicación como por Docker Compose
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=tu_usuario
DB_PASSWORD=tu_password
DB_NAME=sisae_db
DB_LOGGING=false

# =============================================================================
# DOCKER
# =============================================================================
POSTGRES_CONTAINER_NAME=sisae_postgres_db

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGIN=http://localhost:4200
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type, Accept, Authorization
CORS_CREDENTIALS=true

# =============================================================================
# JWT (JSON Web Token)
# =============================================================================
# ⚠️ IMPORTANTE: Cambia este secret en producción
JWT_SECRET=cambiar_este_secreto_en_produccion
JWT_EXPIRES_IN=3600s

# =============================================================================
# NOTAS
# =============================================================================
# - DB_HOST: Usa 'localhost' para desarrollo local
# - DB_PORT: Puerto por defecto de PostgreSQL es 5432
# - DB_LOGGING: Activa logs de SQL con 'true' (solo para debug)
# - JWT_SECRET: Debe ser una cadena larga y aleatoria en producción
# - CORS_ORIGIN: URL del frontend, múltiples orígenes separados por coma
